# Environment variables for 222.place application
# Copy to .env and customize as needed

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=222place123
DB_DATABASE=place222
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=222place123
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
SECRET_KEY=222place-super-secret-key-for-jwt-and-sessions-2024
JWT_SECRET=222place-jwt-secret-key-2024
DEBUG=true
FLASK_ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
API_URL=http://localhost:5001

# CORS Configuration
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Matching Algorithm Configuration
DEFAULT_MATCH_RADIUS_KM=50
MIN_COMPATIBILITY_SCORE=0.3
MAX_MATCHES_PER_USER=50

# Event Configuration
MAX_EVENT_PARTICIPANTS=100
DEFAULT_EVENT_BUDGET_MIN=0
DEFAULT_EVENT_BUDGET_MAX=200

# Security Configuration
SESSION_TIMEOUT_MINUTES=60
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_NOTIFICATIONS=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es

# Development Configuration
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false